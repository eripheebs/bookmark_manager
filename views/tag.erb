<head>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <h1>- Bookmarks -</h1>
  <h2><%=@name%></h2>
  <div class="link-box">
    <ul id="links">
      <% @links.each do |link| %>
        <div>
          <li>
            <a href="<%=link.href %>"><%=link.title %></a>
            <div><a href="/tags/<%=link.tags[0].name%>" class="tag"><%=link.tags[0].name%> </a></div>
          </li>
        </div>
      <% end %>
    </ul>
  </div>

  <form class="" action='/link/add' method="get">
    <input type="submit" value="Add Link">
  </form>
</body>
