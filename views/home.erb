<head>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <h1>- Bookmarks -</h1>
  <h2>Home</h2>
  <div class="link-box">
    <ul id="links">
      <% @links.each do |link| %>
        <li><a href="<%=link.href %>"><%=link.title %></a> </li>
        <div><%= link.tags[0].name%></div>
      <% end %>
    </ul>
  </div>

  <form class="" action='/link/add' method="get">
    <input type="submit" value="Add Link">
  </form>
</body>
